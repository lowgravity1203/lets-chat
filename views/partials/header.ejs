<header>
  <nav class="header--grid">
    <section class="section--col-1">
      <div class="flex-ctn-1">
        <div class="flex-item--logo">
          <a href="#"><i class="fad fa-comments-alt fa-2x"></i></a>
        </div>
        <li><a href="/">Lets Chat</a></li>
      </div>
    </section>
    <section class="section--col-2">
      <div class="flex-ctn-2">
        <% if(!currentUser){ %>
        <button class="header--btn"><a href="/login">Login</a></button>
        <button class="header--btn"><a href="/register">Sign Up</a></button>
        <% } else { %>
        <li>
          <a href="#">Signed in: <%= currentUser.username %></a>
        </li>
        <button class="header--btn"><a href="/logout">Logout</a></button>
        <% } %>
      </div>
    </section>
  </nav>
</header>


