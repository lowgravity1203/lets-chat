<div class="boxes box4">
  <ul id="commentList">
    <div class="main-comments-box4">
      <% currentChannel.post.forEach(post => { %>
      <li id="comment" class="<%= post.tag %>">
        ü§ì: <%= post.author.username %> <br />
        üì≠: <%= post.text %> <br />
        <% if(isAChannelPage) { %>
          üè∑Ô∏è: <%= post.tag %> <br />
        <% } %>
        üìÖ: <%= date %> <br />
        <div class="btn-panel-box4">
          <% if(currentUser && post.author.id.equals(currentUser._id)) { %>
            <button class="btn-box4">
              <% if(isAChannelPage) { %>
                <a
                        class="content-box4"
                        href="/channel/<%= currentUser._id %>/<%= currentChannel.name %>/<%= post.id %>/edit/true"
                >Edit</a>
              <% } else { %>
                <a
                        class="content-box4"
                        href="/channel/<%= currentUser._id %>/<%= currentChannel.name %>/<%= post.id %>/edit/false"
                >Edit</a>
              <% } %>
            </button>

          <form
            action="/channel/<%= currentUser._id %>/<%= currentChannel.name %>/<%= post.id %>?_method=DELETE"
            method="POST"
          >
            <button class="btn-box4 content-box4" type="submit">Delete</button>
          </form>
          <% } %>

          <button class="btn-box4">
            <a
              class="content-box4"
              href="/channel/<%= currentUser._id %>/<%= currentChannel.name %>/<%= post.id %>/reply"
              >Reply</a
            >
          </button>
        </div>
        <ul>
          <% post.replies.forEach((reply)=>{%>
            <li>
                <%= reply.username %> - <%= reply.reply %>
            </li> 
         <% }) %> 
        </ul>
       
      </li>
      <% }) %>
    </div>
  </ul>
</div>
