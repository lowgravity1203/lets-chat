
<h1>This is the <%= currentChannel.name %> channel</h1>
<ul>
    <% currentChannel.post.forEach(post => { %>
        <li>
            Author: <%= post.author.username %> <br>
            Comment: <%= post.text %> <br>
            Tag: <%= post.tag %> <br>
            Date: <%= post.date %> <br>
            <% if(currentUser && post.author.id.equals(currentUser.id)) { %>
                <button><a href="/channel/<%= currentUser.id %>/<%= currentChannel.name %>/<%= post.id %>/edit">Edit</a></button>
                <form action="/channel/<%= currentUser.id %>/<%= currentChannel.name %>/<%= post.id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete</button>
                </form>
            <% } %> 
        </li>
    <% }) %>
</ul>
<form action="/channel/<%= currentUser.id %>/<%= currentChannel.name %>" method="POST">
    <input type="text" name="text" placeholder="text"> <br>
    <input type="text" name="date" placeholder="date"> <br>
    <input type="text" name="tag" placeholder="tag"> <br>
    <button type="submit">Submit</button>
</form>
<a href="/channel/<%= currentUser._id %> ">Back to main channel</a>
