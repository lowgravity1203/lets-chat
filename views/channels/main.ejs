<main class="main--grid">
    <div class="channel--grid">
        <div class="boxes box1">Header</div>
        <div class="boxes box2">Post Sidebar</div>
           
        <div class="boxes box3">Channel Sidebar
            <ul>
                <% currentUser.interests.forEach(interest => { %>
                    <% interest.name.forEach(item => { %>
                        <li>
                            <a href="/channel/<%= currentUser._id %>/<%= item %>"><%= item %></a>
                        </li>
                    <% }) %>
                <% }) %>
            </ul>
        </div>
        <div class="boxes box4">Main</div>
        <div class="boxes box5">Make a Post</div>
    </div>
</main>









